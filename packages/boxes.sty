%%%% boxes %%%%


% definition
\newtcbtheorem{defbox}{def.}%
{colback=RedPurpleLight,
colframe=RedPurple, fonttitle=\bfseries, parbox=false, breakable}{def}

% lemma
\newtcbtheorem{lemmabox}{lemma}%
{colback=DeepBlueLight, colframe=DeepBlue, fonttitle=\bfseries, parbox=false, breakable}{lem}

% theorem
\newtcbtheorem{thmbox}{theorem}%
{colback=DeepGreenLight, colframe=DeepGreen, fonttitle=\bfseries, parbox=false, breakable}{thm}

% proof ?
% the [1] allows to override options (ex. i can do "\begin{proofbox}[colback=Yellow]")
\newtcolorbox{proofbox}[1][]{colback=DeepRedLight, colframe=DeepRed, title=proof!, fonttitle=\bfseries, parbox=false, #1, breakable}

